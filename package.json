{
  "name": "wpdtrt-npm-scripts",
  "version": "0.0.1",
  "description": "Common build tasks.",
  "main": "package.json",
  "person": {
    "name": "Dan Smith",
    "email": "dev@dotherightthing.co.nz",
    "url": "https://profiles.wordpress.org/dotherightthingnz"
  },
  "contributors": [
    {
      "name": "Dan Smith",
      "email": "dev@dotherightthing.co.nz",
      "url": "https://profiles.wordpress.org/dotherightthingnz"
    }
  ],
  "bugs": {
    "url": "https://github.com/dotherightthing/wpdtrt-npm-scripts/issues"
  },
  "keywords": [
    "gulp"
  ],
  "dependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "core-js": "^3.2.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-markdown": "^1.0.0",
    "execa": "^2.1.0",
    "gh-rate-limit": "^1.0.0",
    "include-media": "^1.4.9",
    "node-sass": "^4.13.1",
    "normalize-html-whitespace": "^1.0.0",
    "postcss-cli": "^7.1.0",
    "postcss-pxtorem": "^4.0.1",
    "sass-lint": "^1.13.1",
    "tenon-node": "^0.4.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.1"
  },
  "config": {
    "compile_js_backend": "js/backend.js",
    "compile_js_frontend": "js/frontend.js",
    "lint_js_eslint": "eslint-config-airbnb-base eslint-plugin-chai-friendly eslint-plugin-cypress",
    "return_path": "../../../",
    "scss_import_suffix": ""
  },
  "scripts": {
    "preinstall": "chmod -R a+x scripts",
    "pretest": "./scripts/install-npm-dependencies.sh && ./scripts/install-fixtures.sh",
    "compile:css": "./scripts/install-config.sh && ./scripts/compile-css.sh",
    "compile:js": "./scripts/install-config.sh && ./scripts/compile-js.sh",
    "docs:naturaldocs": "mono \"Natural Docs/NaturalDocs.exe\" ./config/naturaldocs",
    "lint": "./scripts/install-config.sh && ./scripts/lint.sh",
    "test": "mocha --recursive \"./test/**/*.spec.js\" --full-trace",
    "test:compile": "mocha --recursive \"./test/**/compile.spec.js\" --full-trace",
    "test:dependencies": "mocha --recursive \"./test/**/dependencies.spec.js\" --full-trace",
    "test:documentation": "mocha --recursive \"./test/**/documentation.spec.js\" --full-trace",
    "test:lint": "mocha --recursive \"./test/**/lint.spec.js\" --full-trace",
    "postinstall": "./scripts/install-config.sh",
    "postuninstall": "./scripts/uninstall-config.sh && ./scripts/uninstall-npm-dependencies.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotherightthing/wpdtrt-npm-scripts"
  },
  "license": "ISC",
  "homepage": "https://github.com/dotherightthing/wpdtrt-npm-scripts",
  "srcDir": "/Volumes/DanBackup/Websites/wpdtrt-npm-scripts",
  "author": "Dan Smith <dev@dotherightthing.co.nz>"
}
