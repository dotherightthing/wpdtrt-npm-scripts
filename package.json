  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.1"
  },
  "config": {
    "return_path": "./"
  },
  "scripts": {
    "preinstall": "chmod a+x scripts/**/*.sh && node ./scripts/preinstall/remaining-github-api-calls.js",
    "pretest": "./scripts/pretest/npm-test.sh && ./scripts/pretest/fixtures.sh",
    "compile:css": "./scripts/compile/css.sh",
    "compile:js": " ./scripts/compile/js.sh",
    "compile": "./scripts/compile/css.sh && ./scripts/compile/js.sh",
    "docs:naturaldocs": "./scripts/docs/naturaldocs.sh",
    "docs": "./scripts/docs/naturaldocs.sh",
    "lint:css": "./scripts/lint/css.sh",
    "lint:js": "./scripts/lint/js.sh",
    "lint:php": "./scripts/lint/php.sh",
    "lint": "./scripts/lint/css.sh && ./scripts/lint/js.sh && ./scripts/lint/php.sh",
    "test:compile": "mocha --recursive \"./test/**/compile.spec.js\" --full-trace",
    "test:dependencies": "mocha --recursive \"./test/**/dependencies.spec.js\" --full-trace",
    "test:documentation": "mocha --recursive \"./test/**/documentation.spec.js\" --full-trace",
    "test:lint": "mocha --recursive \"./test/**/lint.spec.js\" --full-trace",
    "test": "./scripts/test/npm-install.sh && mocha --recursive \"./test/**/*.spec.js\" --full-trace",
    "postinstall": "./scripts/postinstall/config.sh && ./scripts/postinstall/composer.sh",
    "postuninstall": "./scripts/postuninstall/config.sh && ./scripts/postuninstall/dependencies.sh",
    "reinstall": "chmod a+x scripts/**/*.sh && ./scripts/postinstall/config.sh && ./scripts/postinstall/composer.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotherightthing/wpdtrt-npm-scripts"
